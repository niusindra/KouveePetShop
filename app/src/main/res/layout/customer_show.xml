<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".View.Customer.RecycleAdapter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kvBackground">
    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="DAFTAR CUSTOMER"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/testcolorblue"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/border"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_below="@+id/textView27"
        android:background="@drawable/joinbtn" />

    <EditText
        android:id="@+id/searchCustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/border"
        android:layout_marginTop="0dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RC_Customer"
        android:layout_width="409dp"
        android:layout_height="509dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="146dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="4dp"></androidx.recyclerview.widget.RecyclerView>


</RelativeLayout>