<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/background_style"
    tools:context=".View.Admin.pengadaanEdit">
    <ImageView
        android:id="@+id/backBtnAdaan1"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="start"
        android:layout_marginLeft="10dp"
        android:backgroundTint="@color/whitecolor"
        android:background="@drawable/iconback" />
    <LinearLayout
        android:id="@+id/idlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <Button
            android:id="@+id/addProdukPengadaan1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/real_border"
            android:gravity="center"
            android:textSize="10sp"
            android:text="Tambah Produk"
            android:textAllCaps="false"
            android:textColor="@color/whitecolor" />

        <Button
            android:id="@+id/editPengadaan"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/real_border"
            android:gravity="center"
            android:textSize="10sp"
            android:text="Edit Pengadaan"
            android:textAllCaps="false"
            android:textColor="@color/whitecolor" />
        <Button
            android:id="@+id/delPengadaan"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/real_border"
            android:gravity="center"
            android:textSize="10sp"
            android:text="Hapus Pengadaan"
            android:textAllCaps="false"
            android:textColor="@color/whitecolor" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/idlayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/suppTVAdaan1"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="Supplier:"
            android:textColorHint="@color/whitecolor"
            android:elevation="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"/>
        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:elevation="5dp"
            android:layout_gravity="center">
            <Spinner
                android:id="@+id/supplierSpinAdaan1"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:backgroundTint="@color/whitecolor"
                android:popupBackground="@drawable/main_gradient"/>
        </RelativeLayout>
<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/myRc1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:gravity="center">


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>