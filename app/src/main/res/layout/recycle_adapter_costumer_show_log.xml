<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/RC_Layanan_Log_cardView"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".View.Customer.RecycleAdapterLog"
    android:layout_marginBottom="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="269dp"
            android:layout_gravity="center"
            android:background="@color/whitecolor"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="51dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@color/green_kv">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/iconcustomer"
                    android:backgroundTint="@color/whitecolor" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/RC_Admin_Event_Parent"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/RC_Costumer_Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:hint="Nama"
                    android:textColor="@color/blackcolor"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/RC_Alamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:hint="Alamat"
                    android:textColor="@color/blackcolor" />

                <TextView
                    android:id="@+id/RC_TanggalLahir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:hint="Tanggal Lahir"
                    android:textColor="@color/blackcolor" />

                <TextView
                    android:id="@+id/RC_Telp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:hint="Telp"
                    android:textColor="@color/blackcolor" />

                <TextView
                    android:id="@+id/custcreatedat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="serif"
                    android:hint="Dibuat pada "
                    android:textColor="@color/blackcolor" />
                <TextView
                    android:id="@+id/custcreatedby"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:hint="Dibuat oleh "
                    android:textColor="@color/blackcolor"/>
                <TextView
                    android:id="@+id/custeditedat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:hint="Diedit pada "
                    android:textColor="@color/blackcolor"/>
                <TextView
                    android:id="@+id/custeditedby"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:hint="Diedit oleh "
                    android:textColor="@color/blackcolor"/>
                <TextView
                    android:id="@+id/custdeletedat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:hint="Dihapus pada"
                    android:textColor="@color/blackcolor"/>
                <TextView
                    android:id="@+id/custdeletedby"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:hint="Dihapus oleh"
                    android:textColor="@color/blackcolor"/>



            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
