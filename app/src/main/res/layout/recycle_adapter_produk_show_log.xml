<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".View.Produk.RecycleAdapterProdukLog"
    android:layout_marginBottom="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_gravity="center"
            android:background="@color/whitecolor"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="51dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@color/green_kv">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/iconproduk"
                    android:backgroundTint="@color/whitecolor" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/RC_Produk_Event_Parent"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/fotoprodukLog"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/real_border"/>
                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/adapterNamaProdukLog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:hint="Nama Produk"
                        android:textColor="@color/blackcolor"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/adaptersuppProLog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:hint="Supplier"
                        android:textColor="@color/blackcolor"/>

                    <TextView
                        android:id="@+id/adapterHargaBeliLog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:hint="Harga Beli"
                        android:textColor="@color/blackcolor"/>

                    <TextView
                        android:id="@+id/adapterHargaJualLog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:hint="Harga Jual"
                        android:textColor="@color/blackcolor"/>
                    <TextView
                        android:id="@+id/adapterStokHargaLog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:hint="Stok"
                        android:textColor="@color/blackcolor"/>

                    <TextView
                        android:id="@+id/adapterMinStokHargaLog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:hint="Min Stok"
                        android:textColor="@color/blackcolor"/>
                    <TextView
                        android:id="@+id/createdatpro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="serif"
                        android:hint="Dibuat "
                        android:textColor="@color/blackcolor" />
                    <TextView
                        android:id="@+id/editedatpro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:hint="Diedit "
                        android:textColor="@color/blackcolor"/>
                    <TextView
                        android:id="@+id/deletedatpro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:hint="Dihapus "
                        android:textColor="@color/blackcolor"/>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
